" Common
colorscheme desert
set scrolloff=999 "常にカーソル行を真ん中に表示
set showtabline=2 "常にタブを表示
source $VIMRUNTIME/delmenu.vim	"メニューの文字化け修正
set langmenu=ja_jp.utf-8
source $VIMRUNTIME/menu.vim

" Mac設定
if has('mac') && has('gui_running')
	set transparency=10	" opacity
	set guifont=Monaco:h14	" font
	set fuoptions=maxvert,maxhorz
  au GUIEnter * set fullscreen
endif

" Windows設定
if has("win32") || has("win64")
	gui
	au GUIEnter * simalt ~x	"全画面表示
	set transparency=245 "背景を透過
	set guifont=ゆたぽん（コーディング）:h12:b:cSHIFTJIS "フォント設定
endif


